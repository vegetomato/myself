<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:sec="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
		<bean id="testBean" class="com.jafa.model.Board">
			<property name="content" value="ImportResource 테스트"/>
		</bean>
		
		<bean id="customAccessDeniedHandler" class="com.jafa.security.CustomAccessDeniedHandler"></bean>
		<bean id="customLoginSuccessHandler" class="com.jafa.security.CustomLoginSuccessHandler"></bean>
		<bean id="customNoopPassowrdEncoder" class="com.jafa.security.CustomNoopPassowrdEncoder"/>
		
		<sec:http>
			<sec:intercept-url pattern="/security/all" access="permitAll"/>
			<sec:intercept-url pattern="/security/member" access="hasRole('ROLE_USER')"/>
			<sec:intercept-url pattern="/security/admin" access="hasRole('ROLE_ADMIN')"/>
			<!-- <sec:form-login/>  기본 로그인 페이지-->
			<sec:form-login login-page="/customLogin" authentication-success-handler-ref="customLoginSuccessHandler"/>
			<sec:logout logout-url="/customLogout" invalidate-session="true" />
			<!--<sec:access-denied-handler error-page="/accessError"/>-->
			<sec:access-denied-handler ref="customAccessDeniedHandler"/>
			
		</sec:http>
		<sec:authentication-manager>
			<sec:authentication-provider>
				<!-- <sec:user-service>
					<sec:user name="parkchangjun" password="{noop}1234"  authorities="ROLE_MEMBER"/>
					<sec:user name="adminparkchangjun" password="{noop}1234"  authorities="ROLE_MEMBER, ROLE_ADMIN"/>
				</sec:user-service> -->
				
				<sec:jdbc-user-service data-source-ref="dataSource"/>
				<sec:password-encoder ref="customNoopPassowrdEncoder"/>
			</sec:authentication-provider>
		</sec:authentication-manager>
		
</beans>
